<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WEB</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create-user-page">Create User</a>
    </div>
    <div class="table-container">
        <h2>List Users</h2>
        <table>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
            <% listUsers.forEach((user)=> { %>
                <tr>
                    <td>
                        <%=user.id%>
                    </td>
                    <td>
                        <%=user.email%>
                    </td>
                    <td>
                        <%=user.name%>
                    </td>
                    <td>
                        <%=user.city%>
                    </td>
                    <td>
                        <a href="/edit-user-page/<%=user.id%>"><button>Edit</button></a>
                        <a href="/delete-user/<%=user.id%>"><button>Delete</button></a>
                    </td>
                </tr>
                <% }); %>
        </table>
    </div>


</body>

</html>