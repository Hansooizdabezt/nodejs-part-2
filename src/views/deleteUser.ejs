<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete User</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create-user-page">Create User</a>
    </div>

    <div class="form-add-new">
        <form action="/delete-user" method="post">
            <fieldset>
                <legend>Do you really want to delete this user with below informations:</legend>
                <div class="input-group d-none">
                    <label>Id: </label>
                    <input type="text" name="userId" value="<%=user.id%>">
                </div>

                <div class="input-group">
                    <label>Email: </label>
                    <input type="text" name="email" value="<%=user.email%>" disabled>
                </div>

                <div class="input-group">
                    <label>Name: </label>
                    <input type="text" name="name" value="<%=user.name%>" disabled>
                </div>

                <div class="input-group">
                    <label>City: </label>
                    <input type="text" name="city" value="<%=user.city%>" disabled>
                </div>

                <div>
                    <button class="btn-danger">Yes</button>
                    <a class="btn-success" href="/">No</a>
                </div>
            </fieldset>
        </form>
    </div>
</body>

</html>